generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_HABLA")
}

// Todos

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  messages  Message[]
  calls     Call[]
}

model Message {
  id        String   @id @default(uuid())
  senderId  String
  receiverId String
  content   String
  sentAt    DateTime @default(now())

  sender    User     @relation(fields: [senderId], references: [id])
}

model Call {
  id        String   @id @default(uuid())
  callerId  String
  receiverId String
  startedAt DateTime
  endedAt   DateTime?

  caller    User     @relation(fields: [callerId], references: [id])
}


model Channel {
  id        String   @id @default(uuid())
  name      String
  members   Member[]
}

model Member {
  id        String   @id @default(uuid())
  userId    String
  channelId String

  channel   Channel  @relation(fields: [channelId], references: [id])
}
